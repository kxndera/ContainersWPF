<Window x:Class="WpfAppCertificate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodel="clr-namespace:WpfAppCertificate.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <StackPanel>
        <TextBlock Text="Czas do zakończenia roku szkolnego:" FontSize="45" TextAlignment="Center" FontFamily="bahnschrift"/>

        <TextBlock Text="{Binding Time}" FontSize="40" TextAlignment="Center"/>
       
    </StackPanel>
</Window>
