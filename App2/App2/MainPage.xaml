<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage">

    <StackLayout Margin="20">
        <Label Text="Właściwości czcionki" BackgroundColor="#558b2f" TextColor="White" FontAttributes="Bold" FontSize="Large"/>
        <Label x:Name="LabelValue" FontSize="Medium" />
        <Slider x:Name="SliderValue" Maximum="40" DragCompleted="SliderValue_DragCompleted"/>
        <Label x:Name="QuoteLabel" Text="Dzień dobry" TextColor="Black"/>
        <Button Text=">>" BackgroundColor="#558b2f" Clicked="Button_Clicked"
                HorizontalOptions="Center" TextColor ="White"/>
    </StackLayout>

</ContentPage>
