<Window x:Class="ContainersWPF.WindowGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainersWPF"
        mc:Ignorable="d"
        Title="WindowGrid" Height="450" Width="800" WindowStyle="None">
    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Button1" Grid.Column="3" Grid.Row="1"/>
        <Button Content="Button2" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Button Content="Button3" Grid.Row="2" Grid.ColumnSpan="4"/>
        <Button Content="Button4" />

    </Grid>
</Window>
