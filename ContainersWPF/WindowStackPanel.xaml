<Window x:Class="ContainersWPF.WindowStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainersWPF"
        mc:Ignorable="d"
        Title="WindowStackPanel" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel.Background>
            <ImageBrush ImageSource="/305130372_604557924490393_7548898988080602996_n.png"/>
        </StackPanel.Background>
        <Button Content="On a cold winter morning"/>
        <Button Content="in the time before the light"/>
        <WrapPanel>
            <Button>1</Button>
            <Button>2</Button>
            <Button>3</Button>
            <Button>4</Button>
        </WrapPanel>
        <Label HorizontalAlignment="Center" Content="In flames of death's eternal reign"/>
        <Button Content="we run towards the fight"/>
    </StackPanel>
</Window>
